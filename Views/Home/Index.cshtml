@model FutureValueModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Future Value Calculator</h1>
        </div>
    </div>
</div>
<form asp-action="Index" method="post" class="container">
    <div class="row">
        <div class="col-4">
            <label asp-for="MonthlyInvestment">Monthly Investment:</label>
            <input asp-for="MonthlyInvestment"/>
            <div>
                <span asp-validation-for="MonthlyInvestment"></span>
            </div>
        </div>
        <div class="col-4">
            <label asp-for="YearlyInterestRate">Yearly Interest Rate:</label>
            <input asp-for="YearlyInterestRate"/>
            <div>
                <span asp-validation-for="YearlyInterestRate"></span>
            </div>
        </div>
        <div class="col-4">
            <label asp-for="Years">Number of Years:</label>
            <input asp-for="Years"/>
            <div>
                <span asp-validation-for="Years"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div>
                <label>Future Value:</label>
                <input value="@ViewBag.FV.ToString("C2")" readonly>
            </div>
            <button type="submit">Calculate</button>
            <a asp-action="Index">Clear</a>
        </div>
    </div>
</form>